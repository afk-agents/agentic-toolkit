{
  "name": "afk-viewer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "A local Bun/React dashboard for monitoring Claude Code sessions in real-time",
  "scripts": {
    "dev": "bun --hot src/server/index.ts",
    "build": "bun build ./src/frontend/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/server/index.ts"
  },
  "dependencies": {
    "@types/prismjs": "^1.26.5",
    "prismjs": "^1.30.0",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "bun-types": "latest"
  }
}
